		h1.signup__label Регистрация аккаунта
		+formCommon('', ['textForm', 'signup__name'], '', '', 'signup-name')(type='text' placeholder='Имя')
		+formCommon('', ['textForm', 'signup__surname'], '', '', 'signup-surname')(type='text' placeholder='Фамилия')
