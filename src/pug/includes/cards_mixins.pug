mixin numberSearcher(uniqueId)
	section.search_number
		h1.search_number__label Найдем номера под ваши пожелания
		div.search_number__dates_wrap
			+formCommon('Прибытие', ['date', 'date_from'], '', 'dateDropdown', 'search_number__arriving_date_' + uniqueId)(placeholder='ДД.ММ.ГГГГ')
			+formCommon('Выезд', ['date', 'date_to'], '', 'dateDropdown', 'search_number__departure_date_'+ uniqueId)(placeholder='ДД.ММ.ГГГГ')
		+dropdown('guests', 'search_number__guests_dropdown_' + uniqueId, 'гости', '', '', ['Взрослые', 'Дети', 'Младенцы'])(placeholder='Сколько гостей')
		+buttonCommon('Подобрать номер', 'toAct', ['button-to-do'], ['search_number__button_to-do'])
mixin signupCard(uniqueId)
	section.signup
		h1.signup__label Регистрация аккаунта
		+formCommon('', ['textForm', 'textForm_signup'], '')(type='text' placeholder='Имя')
		+formCommon('', ['textForm', 'textForm_signup'], '')(type='text' placeholder='Фамилия')
		+formRadio('', 'signup__sex_radio_' + uniqueId, 'Мужчина', 'Женщина')
		+formCommon('Дата рождения', ['date', 'signup__birthdate', 'birthdate'], '', '', 'signup_birthdate')(placeholder='ДД.ММ.ГГГГ')
		+formCommon('Данные для входа в сервис', ['textForm'], '')(type='email' placeholder='Email')
		+formCommon('', ['textForm'], '', '', 'masked_text_example')(type='password' placeholder='Пароль')
		+formToggle('Получать спецпредложения', 'signup__toggle_' + uniqueId, '')
		+buttonCommon('Перейти к оплате', 'toAct', ['button-to-do'], ['signup__button_to-do'])
		div.signup__login_wrap
			p.signup__login_ifExiste Уже есть аккаунт на Toxin
			+buttonCommon('Войти', '', ['button-transparent', 'signup__button-transparent'])
