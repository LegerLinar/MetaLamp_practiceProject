mixin roomCard(roomNumber, imgSrc, isLux, price, stars, reviews)
	-	var n = 0
	section.room-card(id= 'room_' + roomNumber)
		div.room-card__image__wrap
			img.room-card__image(src= require('./images/pages_image/' + imgSrc))
			div.room-card__image__wrap__shadowmaker
			div.room-card__image__wrap__expanders
				svg.room-card__image__wrap__expanders__less(width="8" height="13" viewBox="0 0 8 13" fill="none" xmlns="http://www.w3.org/2000/svg")
					|<path d="M7.42188 11.0928L6.01563 12.499L0.0156253 6.49902L6.01563 0.499024L7.42188 1.90527L2.82813 6.49902L7.42188 11.0928Z" fill="white"/>
				svg.room-card__image__wrap__expanders__more(width="8" height="13" viewBox="0 0 8 13" fill="none" xmlns="http://www.w3.org/2000/svg")
					|<path d="M0.578125 1.90527L1.98438 0.499024L7.98438 6.49902L1.98438 12.499L0.578125 11.0928L5.17188 6.49902L0.578125 1.90527Z" fill="white"/>
			div.room-card__image__wrap__counters
				div.room-card__image__wrap__counters__counter(class='image__counter__full')
					|<circle cx="50" cy="50" r="40" stroke="black" stroke-width="3" fill="red" />
				while n < 3
					div.room-card__image__wrap__counters__counter(class=['image__counter__empty', 'image__counter__empty'+ n++])
		div.room-card_general
			div.room-card__label
				div.room-card__label_number
					h3.room-card__label_number_n № &nbsp
					h2.room-card__label_number_number= roomNumber
					p.room-card__label_number_bonus!='&nbsp'+isLux
				div.room-card__label_pricing
					h3.room-card__label_pricing_price!=price + `&#8381 `
					span.room-card__label_pricing_per в сутки
			hr.room-card_general_hr
			div.room-card__rate
				+rangeRateQuerry('room-'+ roomNumber + '_range-rate', stars)
				div.room-card__rate_reviews
					h3.room-card__rate_reviews_count!=reviews + '&nbsp'
					span.room-card__rate_reviews_review Отзывов