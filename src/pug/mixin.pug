mixin formCommon(formType, mission, placed, styleClass, explicitSpan)
	form.form(class= styleClass)
		div.form__wrapper
			h3= mission
			if explicitSpan
				h3.form_explain
					span= explicitSpan
		input.form__item(type=formType placeholder=placed)

