div.cards_page
	div.first_column
		section.search_number
			h1.search_number__label Найдем номера под ваши пожелания
			div.search_number__dates_wrap
				+formCommon('Прибытие', ['date', 'date_from'], '', 'dateDropdown', 'search_number__arriving_date')(placeholder='ДД.ММ.ГГГГ')
				+formCommon('Выезд', ['date', 'date_to'], '', 'dateDropdown', 'search_number__departure_date')(placeholder='ДД.ММ.ГГГГ')
			+dropdown('guests', 'search_number__guests_dropdown', 'гости', '', '', ['Взрослые', 'Дети','Младенцы'])(placeholder='Сколько гостей')
			+buttonCommon('Подобрать номер', 'toAct', ['button-to-do'])
		section.signup
			h1.signup__label Регистрация аккаунта
			+formCommon('', ['textForm', 'textForm_signup'], '')(type='text' placeholder='Имя')
			+formCommon('', ['textForm', 'textForm_signup'], '')(type='text' placeholder='Фамилия')
			+formRadio('', 'signup__sex_radio', 'Мужчина', 'Женщина')
			+formCommon('Дата рождения', ['date', 'signup__birthdate', 'birthdate'], '', '', 'signup_birthdate')(placeholder='ДД.ММ.ГГГГ')
			+formCommon('Данные для входа в сервис', [ 'textForm'], '')(type='email' placeholder='Email')
			+formCommon('', ['textForm'], '', '', 'masked_text_example')(type='password' placeholder='Пароль')
			+formToggle('Получать спецпредложения', 'signup__toggle', '')
			+buttonCommon('Перейти к оплате', 'toAct', ['button-to-do'], ['signup__button_to-do'])
			div.signup__login_wrap
				p.signup__login_ifExiste Уже есть аккаунт на Toxin
				+buttonCommon('Войти', '', ['button-transparent'])
	div.second_column
		section.roomCard
			div.roomCard__label
				div.roomCard__label_number
					h3.roomCard__label_number_n №
					h1.roomCard__label_number_number 888
					p.roomCard__label_number_bonus люкс
				div.roomCard__label_pricing
					h3.roomCard__label_pricing_price 9 9990&#8381&nbsp
					span.roomCard__label_pricing_per в сутки